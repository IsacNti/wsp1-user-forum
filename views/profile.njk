{% extends "layout.njk" %}
{% block  content %}
<div class="data-color">
    <div class="profile">
        <h1>{{ title }}</h1>
        <div>
            <p>Username: {{ user }}</p>
        </div>
        <form action="/logout" method="POST">
            <button type="submit" id="logout">Logout</button>
        </form>
        <form action="/delete" method="POST">
            <button type="submit">Delete Account</button>
        </form>
    </div>
</div>
{% endblock %}